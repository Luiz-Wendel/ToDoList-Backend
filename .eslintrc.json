{
  "env": {
    "browser": true,
    "commonjs": true,
      "es2021": true,
      "mocha": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "overrides": [
    {
     "files": ["src/__tests__/unit/*.js"],
        "rules": {
           "no-unused-expressions": 0,
           "no-unused-vars": 0
        }
    }
   ]
}
